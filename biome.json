{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "extends": ["dist/biome.recommended.json"],
  "files": { "includes": ["**/dist"] },
  "root": true,
  "assist": {
    "actions": {
      "source": {
        "useSortedKeys": {
          "level": "on",
          "options": {
            "groupByNesting": true
          }
        }
      }
    }
  },
  "overrides": [
    {
      "includes": ["package.json"],
      "json": {
        "formatter": {
          "expand": "always"
        }
      }
    }
  ]
}
